{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "options": {
      "set-session-context": false 
    },
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "authentication": {
    "provider": "AzureAD",
    "jwt": {
      "audience": "d31deb65-ecd4-4313-ba8b-bee91e8099f9",
      "issuer": "https://login.microsoftonline.com/2d4df158-b488-462b-bdea-d3fdb92824bb/v2.0"
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    }
  },
  "entities": {
    "InsightsStudy": {
      "source": "dbo.Insights_Study",
      "permissions": [
        {
          "actions": ["read"],
          "role": "authenticated"
        },
        {
          "actions": ["update"],
          "role": "admin"
        }
      ]
    },
    "InfoQuestion": {
      "source": {
        "object": "dbo.Insights_InfoQuestion",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "InfoQuestion",
          "plural": "InfoQuestions"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["update"],
          "role": "admin"
        }
      ]
    }
  }
}